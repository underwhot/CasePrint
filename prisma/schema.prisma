generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  fulfilled
  shipped
  awaiting_shipment
}

enum PhoneModel {
  iphone11
  iphone12
  iphone13
  iphone14
  iphone15
}

enum CaseColor {
  black
  white
  blue
  rose
}

enum CaseMaterial {
  silicone
  polycarbonate
}

enum CaseFinish {
  smooth
  textured
}

model Configuration {
  id              String        @id @default(cuid())
  width           Int
  height          Int
  imageUrl        String
  model           PhoneModel?
  caseColor       CaseColor?
  caseMaterial    CaseMaterial?
  caseFinish      CaseFinish?
  croppedImageUrl String?
}
